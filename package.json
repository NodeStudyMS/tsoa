{
  "name": "tsoa",
  "version": "1.0.0",
  "description": "Board CRUD API with tsoa",
  "main": "backend/src/server.ts",
  "scripts": {
    "build": "cd backend && tsoa spec-and-routes && cd .. && tsc",
    "build:all": "npm run build && cd backend/src/resources/frontend && npm run build && cd ../../../../ && node scripts/copy-frontend-to-dist.js",
    "copy-frontend": "node scripts/copy-frontend-to-dist.js",
    "start": "node dist/backend/src/server.js",
    "dev": "concurrently \"nodemon\" \"cd backend && nodemon -x tsoa spec-and-routes\"",
    "test": "jest"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.4.2",
    "morgan": "^1.10.0",
    "nunjucks": "^3.2.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.10.5",
    "@types/socket.io": "^3.0.1",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}