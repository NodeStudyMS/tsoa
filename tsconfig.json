{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./backend/src/types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["backend/src/*"]
    }
  },
  "include": ["backend/src/**/*"],
  "exclude": ["backend/src/resources/frontend/**/*"]
}
